<tal:main_template metal:use-macro="load: main_template.pt">
<div metal:fill-slot='body'>

    <div class="span12">
        <h2>${len(consists)} road vehicles and trams for OpenTTD</h2>
        <hr />
        <tal:base_track_type repeat="base_track_type doc_helper.get_base_track_types()">
            <h3 id="${base_track_type}">${base_track_type}</h3>
            <table class="table table-striped tablesorter">
                <thead>
                    <tr>
                        <td><!--! empty cell --></td>
                        <th>Vehicle Name</th>
                        <th>Type</th>
                        <th class="number">Intro Date</th>
                        <th>Special Features</th>
                    </tr>
                </thead>
                <tbody>
                    <tal:consists_list repeat="consist consists">
                        <tr tal:condition="consist.base_track_type == base_track_type"
                            tal:define="consist_name_dict doc_helper.unpack_name_string(consist)"
                            id="${consist.id}">
                            <td style="vertical-align:middle; width:${2 * global_constants.buy_menu_sprite_width};">
                                <img src="static/img/${consist.id}.png"
                                     width="${2 * global_constants.buy_menu_sprite_width}"
                                     height="${2 * global_constants.buy_menu_sprite_height}" />
                            </td>
                            <td style="vertical-align:middle;">
                                <a class="table-link-dark" href="#${consist.id}">${consist_name_dict['name']} (${consist_name_dict['power_suffix']})</a>
                            </td>
                            <td>${consist_name_dict['type_suffix']}</td>
                            <td style="vertical-align:middle;" class="number">${consist.intro_date}</td>
                            <td style="vertical-align:middle;">
                                ${', '.join(doc_helper.get_special_features_for_vehicle(consist)).capitalize()}
                            </td>
                        </tr>
                    </tal:consists_list>
                </tbody>
            </table>
        </tal:base_track_type>
    </div>

</div>
</tal:main_template>
